<Window x:Class="AirConditionerShop_NguyenKhanhMinh.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirConditionerShop_NguyenKhanhMinh"
        mc:Ignorable="d"
        Title="MainWindow" Height="330" Width="600"
        FontFamily="Arial" FontSize="14" Background="#FFD4F7D4"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <DataGrid x:Name="dtgAirconditioner" d:ItemsSource="{d:SampleData ItemCount=0}" Margin="20,20,20,80" SelectionChanged="DataGrid_SelectionChanged" AutoGenerateColumns="False" VerticalScrollBarVisibility="Auto" Height="200"></DataGrid>
        <Button x:Name="btnDelete" Content="Delete" Margin="355,240,120,0" Height="35" Width="75" Click="btnDelete_Click" />
        <Button x:Name="btnUpdate" Content="Update" Margin="240,240,240,0" Height="35" Width="75" Click="btnUpdate_Click" />
        <Button x:Name="btnCreate" Content="Create" Margin="120,240,355,0" Height="35" Width="75" Click="btnCreate_Click"/>
    </Grid>
</Window>