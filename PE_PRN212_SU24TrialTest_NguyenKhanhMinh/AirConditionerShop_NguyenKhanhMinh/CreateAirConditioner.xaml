<Window x:Class="AirConditionerShop_NguyenKhanhMinh.CreateAirConditioner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirConditionerShop_NguyenKhanhMinh"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600"
        FontFamily="Arial" FontSize="14" Background="#FFD4F7D4"
        WindowStartupLocation="CenterScreen">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" /> <!-- 1 -->
            <RowDefinition Height="5" />
            <!-- Spacer -->
            <RowDefinition Height="Auto" /> <!-- 3 -->
            <RowDefinition Height="5" />
            <!-- Spacer -->
            <RowDefinition Height="Auto" /> <!-- 5 -->
            <RowDefinition Height="5" />
            <!-- Spacer -->
            <RowDefinition Height="Auto" /> <!-- 7 -->
            <RowDefinition Height="5" />
            <!-- Spacer -->
            <RowDefinition Height="Auto" /> <!-- 9 -->
            <RowDefinition Height="5" />
            <!-- Spacer -->
            <RowDefinition Height="Auto" /> <!-- 11 -->
            <RowDefinition Height="5" />
            <!-- Spacer -->
            <RowDefinition Height="Auto" /> <!-- 13 -->
            <RowDefinition Height="5" />
            <!-- Spacer -->
            <RowDefinition Height="Auto" /> <!-- 15 -->
            <RowDefinition Height="5" />
            <!-- Spacer -->
            <RowDefinition Height="Auto" /> <!-- 17 -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Content="Create Air Conditioner" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
        <Label Grid.Row="1" Grid.Column="0" Content="ID:" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <TextBox x:Name="txtID" Grid.Row="1" Grid.Column="1" Width="250" TextWrapping="Wrap" HorizontalAlignment="Right"/>
        <Label Grid.Row="3" Grid.Column="0" Content="Name:" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <TextBox x:Name="txtName" Grid.Row="3" Grid.Column="1" Width="250" TextWrapping="Wrap" HorizontalAlignment="Right"/>
        <Label Grid.Row="5" Grid.Column="0" Content="Warranty:" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <TextBox x:Name="txtWarranty" Grid.Row="5" Grid.Column="1" Width="250" TextWrapping="Wrap" HorizontalAlignment="Right"/>
        <Label Grid.Row="7" Grid.Column="0" Content="Sound Pressure Level:" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <TextBox x:Name="txtSoundPressureLevel" Grid.Row="7" Grid.Column="1" Width="250" TextWrapping="Wrap" HorizontalAlignment="Right"/>
        <Label Grid.Row="9" Grid.Column="0" Content="Feature Function:" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <TextBox x:Name="txtFeatureFunction" Grid.Row="9" Grid.Column="1" Width="250" TextWrapping="Wrap" HorizontalAlignment="Right"/>
        <Label Grid.Row="11" Grid.Column="0" Content="Quantity:" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <TextBox x:Name="txtQuantity" Grid.Row="11" Grid.Column="1" Width="250" TextWrapping="Wrap" HorizontalAlignment="Right"/>
        <Label Grid.Row="13" Grid.Column="0" Content="Price($):" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <TextBox x:Name="txtPrice" Grid.Row="13" Grid.Column="1" Width="250" TextWrapping="Wrap" HorizontalAlignment="Right"/>
        <Label Grid.Row="15" Grid.Column="0" Content="Supplier:" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <ComboBox x:Name="cbbSupplier" Grid.Row="15" Grid.Column="1" Width="250" HorizontalAlignment="Right"/>
        <Button x:Name="btnCreate" Grid.Row="17" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Content="Create" Width="80" Margin="5" Click="btnCreate_Click"/>
    </Grid>
</Window>
