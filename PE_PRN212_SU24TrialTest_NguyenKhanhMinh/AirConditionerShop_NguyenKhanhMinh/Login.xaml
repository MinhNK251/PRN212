<Window x:Class="AirConditionerShop_NguyenKhanhMinh.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirConditionerShop_NguyenKhanhMinh"
        mc:Ignorable="d"
        Title="MainWindow" Height="330" Width="600"
        FontFamily="Arial" FontSize="14" Background="#FFD4F7D4"
        WindowStartupLocation="CenterScreen">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <!-- Spacer -->
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <!-- Spacer -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Content="Air Conditioner Management System" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
        <Label Grid.Row="1" Grid.Column="0" Content="Email:" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <TextBox x:Name="txtEmail" Grid.Row="1" Grid.Column="1" Width="250" TextWrapping="Wrap" Text="admin@AirConditionerShop.com.sg" HorizontalAlignment="Right"/>
        <Label Grid.Row="3" Grid.Column="0" Content="Password:" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <TextBox x:Name="txtPassword" Grid.Row="3" Grid.Column="1" Width="250" TextWrapping="Wrap" Text="@1" HorizontalAlignment="Right"/>
        <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnLogin" Content="Login" Width="80" Margin="5" Click="btnLogin_Click"/>
            <Button Content="Reset" Width="80" Margin="5" Click="BtnReset_Click"/>
        </StackPanel>
    </Grid>
</Window>