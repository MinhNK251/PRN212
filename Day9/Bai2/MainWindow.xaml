<Window x:Class="Bai2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Camera App" Height="450" Width="800" Background="Black">
    <Grid>
        <!-- Centering the camera feed -->
        <Image Name="cameraFeed" Width="640" Height="480" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!-- Circle button for taking photo -->
        <Button Content="Take Photo" Width="100" Height="41" 
                HorizontalAlignment="Center" VerticalAlignment="Top" 
                Margin="0,373,0,0" 
                Click="TakePhoto_Click"
                Background="White" Foreground="Black" BorderBrush="Black"
                FontWeight="Bold" FontSize="14"/>
    </Grid>
</Window>
