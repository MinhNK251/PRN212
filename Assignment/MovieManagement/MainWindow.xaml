<Window x:Class="MovieManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieManagement"
        mc:Ignorable="d"
        Title="Movie Management" Height="650" Width="1210" Background="#BFFFFFFF" Loaded="Window_Loaded" Closing="Window_Closing" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Movie Management" HorizontalAlignment="Left" Height="80" Margin="338,3,0,0" VerticalAlignment="Top" Width="520" FontWeight="Heavy" FontSize="50"/>
        <DataGrid x:Name="dtgMovieList" HorizontalAlignment="Left" Height="430" Margin="32,161,0,0" VerticalAlignment="Top" Width="960" AutoGenerateColumns="False" HorizontalScrollBarVisibility="Auto" FontSize="18">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding MovieId}"/>
                <DataGridTemplateColumn Header="Poster" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Width="50" Height="75" Source="{Binding PosterLink}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Title" Binding="{Binding SeriesTitle}" Width="300"/>
                <DataGridTextColumn Header="Released Year" Binding="{Binding ReleasedYear}"/>
                <DataGridTextColumn Header="Certificate" Binding="{Binding Certificate}"/>
                <DataGridTextColumn Header="Runtime" Binding="{Binding Runtime}"/>
                <DataGridTextColumn Header="Genre" Binding="{Binding Genre}"/>
                <DataGridTextColumn Header="Imdb Rating" Binding="{Binding Imdbrating}"/>
                <DataGridTextColumn Header="Overview" Binding="{Binding Overview}" Width="300"/>
                <DataGridTextColumn Header="MetaScore" Binding="{Binding MetaScore}"/>
                <DataGridTextColumn Header="Director" Binding="{Binding Director.DirectorName}"/>
                <DataGridTextColumn Header="Star 1" Binding="{Binding Star1.ActorName}"/>
                <DataGridTextColumn Header="Star 2" Binding="{Binding Star2.ActorName}"/>
                <DataGridTextColumn Header="Star 3" Binding="{Binding Star3.ActorName}"/>
                <DataGridTextColumn Header="Star 4" Binding="{Binding Star4.ActorName}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Title" HorizontalAlignment="Left" Height="47" Margin="32,85,0,0" VerticalAlignment="Top" Width="95" FontSize="25" FontWeight="Black"/>
        <TextBox x:Name="txtTitle" HorizontalAlignment="Left" Height="45" Margin="132,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="537" FontSize="25" />
        <Button x:Name="btnSearch" Content="Search" HorizontalAlignment="Left" Height="50" Margin="734,83,0,0" VerticalAlignment="Top" Width="165" FontSize="20" FontWeight="Black" Click="btnSearch_Click" />
        <Button x:Name="btnCreate" Content="Create Movie" HorizontalAlignment="Left" Height="50" Margin="1017,161,0,0" VerticalAlignment="Top" Width="165" FontSize="20" FontWeight="Black" Click="btnCreate_Click"/>
        <Button x:Name="btnUpdate" Content="Update Movie" HorizontalAlignment="Left" Height="50" Margin="1017,231,0,0" VerticalAlignment="Top" Width="165" FontSize="20" FontWeight="Black" Click="btnUpdate_Click" />
        <Button x:Name="btnDelete" Content="Delete Movie" HorizontalAlignment="Left" Height="50" Margin="1017,301,0,0" VerticalAlignment="Top" Width="165" FontSize="20" FontWeight="Black" Click="btnDelete_Click" />
        <Button x:Name="btnClearAll" Content="Clear all Movie" HorizontalAlignment="Left" Height="50" Margin="1017,371,0,0" VerticalAlignment="Top" Width="165" FontSize="20" FontWeight="Black" Click="btnClearAll_Click" />
        <Button x:Name="btnUpload" Content="Upload Data" HorizontalAlignment="Left" Height="50" Margin="1017,441,0,0" VerticalAlignment="Top" Width="165" FontSize="20" FontWeight="Black" Click="btnUpload_Click" />
    </Grid>
</Window>
