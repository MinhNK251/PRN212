<Window x:Class="MovieManagement.UpdateCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieManagement"
        mc:Ignorable="d"
        Title="Detail Window" Height="450" Width="875"  Background="#BFFFFFFF" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="lblCreateUpdate" HorizontalAlignment="Center" Height="50" Margin="0,15,0,0" VerticalAlignment="Top" Width="650" FontWeight="Heavy" HorizontalContentAlignment="Center" FontSize="30" />
        <Label Content="Movie ID" HorizontalAlignment="Left" Height="45" Margin="30,83,0,0" VerticalAlignment="Top" Width="140" FontSize="15" FontWeight="Black"/>
        <Label Content="Poster Link" HorizontalAlignment="Left" Height="45" Margin="30,123,0,0" VerticalAlignment="Top" Width="140" FontSize="15" FontWeight="Black"/>
        <Label Content="Series Title" HorizontalAlignment="Left" Height="45" Margin="30,163,0,0" VerticalAlignment="Top" Width="140" FontSize="15" FontWeight="Black"/>
        <Label Content="Released Year" HorizontalAlignment="Left" Height="45" Margin="30,203,0,0" VerticalAlignment="Top" Width="158" FontSize="15" FontWeight="Black"/>
        <Label Content="Certificate" HorizontalAlignment="Left" Height="45" Margin="30,243,0,0" VerticalAlignment="Top" Width="140" FontSize="15" FontWeight="Black"/>
        <Label Content="Runtime" HorizontalAlignment="Left" Height="45" Margin="30,283,0,0" VerticalAlignment="Top" Width="140" FontSize="15" FontWeight="Black"/>
        <Label Content="Genre" HorizontalAlignment="Left" Height="45" Margin="30,323,0,0" VerticalAlignment="Top" Width="158" FontSize="15" FontWeight="Black"/>
        <Label Content="Imdb Rating" HorizontalAlignment="Left" Height="45" Margin="30,363,0,0" VerticalAlignment="Top" Width="140" FontSize="15" FontWeight="Black"/>
        <Label Content="Overview" HorizontalAlignment="Left" Height="45" Margin="472,83,0,0" VerticalAlignment="Top" Width="140" FontSize="15" FontWeight="Black"/>
        <Label Content="Meta Score" HorizontalAlignment="Left" Height="45" Margin="472,123,0,0" VerticalAlignment="Top" Width="140" FontSize="15" FontWeight="Black"/>
        <Label Content="Director" HorizontalAlignment="Left" Height="45" Margin="472,163,0,0" VerticalAlignment="Top" Width="158" FontSize="15" FontWeight="Black"/>
        <Label Content="Star 1" HorizontalAlignment="Left" Height="45" Margin="472,203,0,0" VerticalAlignment="Top" Width="140" FontSize="15" FontWeight="Black"/>
        <Label Content="Star 2" HorizontalAlignment="Left" Height="45" Margin="472,243,0,0" VerticalAlignment="Top" Width="140" FontSize="15" FontWeight="Black"/>
        <Label Content="Star 3" HorizontalAlignment="Left" Height="45" Margin="472,283,0,0" VerticalAlignment="Top" Width="158" FontSize="15" FontWeight="Black"/>
        <Label Content="Star 4" HorizontalAlignment="Left" Height="45" Margin="472,323,0,0" VerticalAlignment="Top" Width="140" FontSize="15" FontWeight="Black"/>
        <TextBox x:Name="txtMovieId" HorizontalAlignment="Left" Height="35" Margin="152,83,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="250" IsEnabled="false"/>
        <TextBox x:Name="txtPosterLink" HorizontalAlignment="Left" Height="35" Margin="152,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <TextBox x:Name="txtTitle" HorizontalAlignment="Left" Height="35" Margin="152,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <TextBox x:Name="txtYear" HorizontalAlignment="Left" Height="35" Margin="152,204,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <TextBox x:Name="txtCertificate" HorizontalAlignment="Left" Height="35" Margin="152,243,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <TextBox x:Name="txtRuntime" HorizontalAlignment="Left" Height="35" Margin="152,283,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <TextBox x:Name="txtGenre" HorizontalAlignment="Left" Height="35" Margin="152,323,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <TextBox x:Name="txtImdbrating" HorizontalAlignment="Left" Height="35" Margin="152,363,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <TextBox x:Name="txtOverview" HorizontalAlignment="Left" Height="35" Margin="582,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <TextBox x:Name="txtMetaScore" HorizontalAlignment="Left" Height="35" Margin="582,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <ComboBox x:Name="cbbDirector" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="35" Margin="582,163,0,0" VerticalAlignment="Top" Width="250"/>
        <ComboBox x:Name="cbbStar1" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="35" Margin="582,204,0,0" VerticalAlignment="Top" Width="250"/>
        <ComboBox x:Name="cbbStar2" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="35" Margin="582,243,0,0" VerticalAlignment="Top" Width="250"/>
        <ComboBox x:Name="cbbStar3" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="35" Margin="582,283,0,0" VerticalAlignment="Top" Width="250"/>
        <ComboBox x:Name="cbbStar4" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="35" Margin="582,323,0,0" VerticalAlignment="Top" Width="250"/>
        <Button x:Name="btnSave" Content="Save Movie" HorizontalAlignment="Left" Height="35" Margin="582,363,0,0" VerticalAlignment="Top" Width="164" FontSize="15" FontWeight="Black" Click="btnSave_Click"/>
    </Grid>
</Window>
